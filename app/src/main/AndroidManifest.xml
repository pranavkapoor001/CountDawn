<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.pk.HelFit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.app.pk.HelFit.Register" />
        <activity android:name="com.app.pk.HelFit.Login" />
        <activity android:name="com.app.pk.HelFit.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.pk.HelFit.MainActivity"
            android:label="@string/main_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.app.pk.HelFit.WelcomeActivity"
            android:label="@string/welcome_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.app.pk.HelFit.HomeScreen"
            android:label="@string/home"
            android:theme="@style/AppTheme" />
    </application>

</manifest>